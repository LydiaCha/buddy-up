@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    .test {
        min-height: calc(100vh - 149px);
        position: relative;
    }
    .align-vertical {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 15px;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, .05);
    }
    .button-end {
        display: flex;
        justify-content: flex-end;
    }
    .underline {
        text-decoration: underline;
    }
</style>

<div class="row">
    <div class="col-6 offset-3 test">
        <div class="align-vertical">
            <h1>@ViewData["Title"]</h1>
            <section>
                
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @*<p>

            </p>*@
                        <p>

                        </p>
                    </div>
                    <div class="form-group button-end">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn underline">Register</a>
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="btn underline">Forgot your password?</a>

                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
